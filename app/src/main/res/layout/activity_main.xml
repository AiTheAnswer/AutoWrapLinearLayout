<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_btn_left"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/txt_bg_selector"
            android:button="@null"
            android:gravity="center"
            android:text="居左"
            android:textColor="@color/txt_color_selector" />

        <RadioButton
            android:id="@+id/radio_btn_center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/txt_bg_selector"
            android:button="@null"
            android:gravity="center"
            android:text="居中"
            android:textColor="@color/txt_color_selector" />

        <RadioButton
            android:id="@+id/radio_btn_right"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/txt_bg_selector"
            android:button="@null"
            android:gravity="center"
            android:text="居右"
            android:textColor="@color/txt_color_selector" />


    </RadioGroup>


    <com.allen.autowraplinearlayout.view.AutoWrapLinearLayout
        android:id="@+id/auto_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="35dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="充满" />

    <com.allen.autowraplinearlayout.view.AutoWrapLinearLayout
        android:id="@+id/auto_linear_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/layout_bg"
        android:padding="5dp" />


</LinearLayout>
